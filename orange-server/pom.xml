<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>cloud.xiguapi.orange</groupId>
    <artifactId>orange-server</artifactId>
    <version>0.1.0</version>
    <modules>
        <module>orange-coupon-eureka</module>
        <module>orange-coupon-gateway</module>
        <module>orange-coupon-service</module>
    </modules>
    <name>orange-server</name>
    <packaging>pom</packaging>

    <description>Spring Cloud ‰ºòÊÉ†Âà∏Á≥ªÁªü</description>
    <developers>
        <developer>
